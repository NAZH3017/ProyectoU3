package ProyectoU3;
public class ListaDoble{
  private Empleado inicio, fin;
//------------------------------------------------------------------------------------------------------------Get's y Set's
  //**************************************************************************Inicio
  public Empleado getInicio(){
    return inicio;
  }
  public void Empleado(Empleado inicio){
    this.inicio = inicio;
  }
  //**************************************************************************Fin
  public Empleado getFin(){
    return fin;
  }
  public void setFin(Empleado fin){
    this.fin = fin;
  }
//------------------------------------------------------------------------------------------------------------MÃ©todos
  public void insert(Empleado nuevo){
    if(empty()){
      inicio=fin=nuevo;
    }else{
      if(nuevo.getnum()<Inicio.getnum()){
        nuevo.setSig(inicio);
        inicio.setAnt(nuevo);
        setInicio(nuevo);
      }else{
        if(nuevo.getnum()<fin.getnum()){
          nuevo.setAnt(fin);
          fin.setSig(nuevo);
          setFin(nuevo);
        }else{
          Empleado aux=getInicio();
          while(aux!=null && nuevo.getnum()>aux.getnum()){
            aux=aux.getSig();
          }
          nuevo.setSig(aux);
          nuevo.setAnt(aux.getAnt());
          aux.setAnt(nuevo);
          nuevo.getAnt().setSig(nuevo);
        }
      }
    }
  }
  //**************************************************************************
  public Empleado delete(short num){
    Empleado aux=search(num);
    if(empty()){
      System.out.println("Lista vacia");
      return null;
    }
    if(aux==null){
      return null;
    }else{
      if(getInicio()==getFin()){//unico
        setInicio(null);
        setFin(null);
      }else if(aux==getInicio()){
        setInicio(aux.getSig());
        getInicio().setAnt(null);
      }else if(aux==getFin()){
        setFin(aux.getAnt());
        getFin().setSig(null);
      }else{
        aux.getSig().setAnt(aux.getAnt());
        aux.getAnt().setSig(aux.getSig());
      }
      return aux;
    }
  }
  //**************************************************************************
  public boolean empty(){
    if(frente == null && ult == null){
      return true;
   }
   return false;
  }
  //**************************************************************************
  public Empleado search(short num){
    Empleado aux=getInicio();
    while(aux!=null && num==aux.getnum()){
      aux=aux.getSig();
    }
    return aux;
  }
//-----------------------------------------------------------------------------------------------------------
}
